<header class="navbar">
  <h1><%= link_to 'Odin Flight Booker', root_path %></h1>
</header>

<div class="container">
  <section class="search-form">
  <h3>Find flights</h3>
  <div class="form">
    <%= render 'flights/search_form' %>
  </div>
  
  </section>

  <section class="search-results">
  <h3>Results</h3>

  <% if @same_day_flights.nil?  %>
    <p>Search failed :( Try another search.</p>
  <% else %>
    <% @same_day_flights.each do |flight| %>
      <p><%= params[:from_code] %> to <%= params[:to_code] %> </p>
      <p><%= flight.scheduled_for %></p>
    <% end %>
  <% end %>
  </section>
</div>



